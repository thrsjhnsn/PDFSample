<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:PDFSample" x:Class="PDFSample.PDFSamplePage">
<StackLayout Padding="10">
         <Label Text="PDF Sample" VerticalOptions="Center" HorizontalOptions="Center" FontSize="18"/>
        <Grid>
             <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
            
       
         <Label Text="First Name: " Grid.Row="1" Grid.Column="0" /><Label x:Name="FirstName" Text="{Binding FirstName}" Grid.Row="1" Grid.Column="1"></Label>
         <Label Text="Last Name: " Grid.Row="2" Grid.Column="0"/><Label x:Name="LastName" Text="{Binding LastName}" Grid.Row="2" Grid.Column="1" ></Label>
         <Label Text="Address: " Grid.Row="3" Grid.Column="0"/><Label x:Name="Address" Text="{Binding Address}" Grid.Row="3" Grid.Column="1" ></Label>
         </Grid>
         <StackLayout>
            <Button x:Name="BtnSubmit" Clicked="ButtonClicked" Text="SUBMIT" TextColor="White" BackgroundColor="Silver" ></Button>
        </StackLayout>
</StackLayout>
</ContentPage>
